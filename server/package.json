{
  "name": "@mymedia/server",
  "version": "1.0.1",
  "description": "MyMedia API - In early development.",
  "bugs": "https://github.com/abdeljalil-salhi/MyMedia/issues",
  "main": "dist/index.js",
  "scripts": {
    "env": "gen-env-types .env -o src/env.d.ts -e .",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "npm run build",
    "start": "concurrently --kill-others \"npm run watch\" \"nodemon .\"",
    "dev": "nodemon dist/index.js",
    "ts:start": "ts-node src/index.ts",
    "ts:dev": "nodemon --exec ts-node src/index.ts",
    "test": "echo \"ERROR: no test specified\""
  },
  "author": "Abdeljalil Salhi",
  "license": "MIT",
  "keywords": [
    "mymedia",
    "server",
    "api"
  ],
  "dependencies": {
    "@typegoose/typegoose": "^9.10.1",
    "apollo-server-express": "^3.9.0",
    "argon2": "^0.28.7",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dataloader": "^2.1.0",
    "dayjs": "^1.11.3",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "graphql": "^15.7.2",
    "graphql-upload": "^15.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.4.6",
    "nodemailer": "^6.7.7",
    "pino": "^8.1.0",
    "pino-pretty": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.5.2",
    "type-graphql": "^1.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/graphql-upload": "^8.0.11",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.1",
    "@types/nodemailer": "^6.4.4",
    "@types/pino": "^7.0.5",
    "@types/uuid": "^8.3.4",
    "gen-env-types": "^1.3.4",
    "nodemon": "^2.0.20",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
